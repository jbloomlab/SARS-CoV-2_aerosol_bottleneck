#### ----------------------- Imports ----------------------- ####

import pandas as pd 
from os.path import join

#### -------------------- Configuration -------------------- ####

configfile: "config/snakemake.yml"

#### ----------------------- Targets ----------------------- ####
sample_df = pd.read_csv(config['samples'])
samples = sample_df['Run'].unique()

rule all:
    input: 
        expand(join(config['variant_dir'], "{sample}", "{sample}.variants.tsv"), sample=["HL-2162"]),
        join(config['coverage_dir'], "merged.depth.tsv"),
        expand(join(config['align_dir'], "{sample}", "{sample}.masked.sorted.bam"), sample=["HL-2162"])

#### ------------------------ Rules ------------------------ ####

rule clean:
    shell:
        """
        rm -rf logs/
        rm -rf tmp/
        rm -f slurm*.out
        """

include: "rules/process-fastq.smk"
include: "rules/align-fastq.smk"
include: "rules/filter-primers.smk"
include: "rules/calculate-depth.smk"
include: "rules/call-variants.smk"
